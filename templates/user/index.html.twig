{% extends 'user.html.twig' %}

{% block title %}Ecommerce Site{% endblock %}

{% block body %}
    <style>
        .form_error {
            width: 80%;
            height: auto;
        }

        .form_fields {
            width: 80%;
            height: auto;
            /*background-color: #0000F0;*/
        }

        .form_fields .fields {
            width: 100%;
            height: auto;
            /*background-color: red;*/
        }

        .form_fields .fields .search_field {
            width: 45%;
            height: 50px;
            display: inline-block;
            margin-left: 5px;
        }
        .search_field .label{
            text-align: left;
            margin-bottom: 5px;
        }
        .search_field label{
            color: #222222;
            font-size: 14pt;
        }
        .search_field input{
            width: 100%;
            height: 20px;
        }
        .save_butt {
            width: 100%;
            height: auto;
            margin-top: 20px;
        }
        .save_butt button{
            width: 80px;
            height: 40px;
            border: 0px;
            border-radius: 5px;
            background: #565656;
            color: #ffffff;
        }
        .product {
            width: 80%;
            height: auto;
            min-height: 200px;
            background-color: #0000F0;
            margin-top: 30px;
        }
    </style>
    <div class="wrapper">
        {{ form_start(form) }}
        <div class="form_error">
            {% block form_errors %}
                {% spaceless %}
                    {% if errors|length > 0 %}
                        <ul>
                            {% for error in errors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endspaceless %}
            {% endblock form_errors %}
        </div>
        <div class="form_fields">
            <div class="fields">
                <div class="search_field">
                    <div class="label">
                        {{ form_label(form.title) }}
                    </div>
                    <div class="field">
                        {{ form_widget(form.title) }}
                    </div>
                </div>
                <div class="search_field">
                    <div class="label">
                        {{ form_label(form.description) }}
                    </div>
                    <div class="field">
                        {{ form_widget(form.description) }}
                    </div>
                </div>
            </div>
            <div class="fields">
                <span class="search_field">
                    <div class="label">
                        {{ form_label(form.variants.vars.prototype.color) }}
                    </div>
                    <div class="field">
                        {{ form_widget(form.variants.vars.prototype.color) }}
                    </div>
                </span>
                <span class="search_field">
                    <div class="label">
                        {{ form_label(form.variants.vars.prototype.price) }}
                    </div>
                    <div class="field">
                        {{ form_widget(form.variants.vars.prototype.price) }}
                    </div>
                </span>
            </div>
            <div class="save_butt">
                {{ form_widget(form.search) }}
            </div>
        </div>
        {{ form_end(form) }}
        <div class="product">

        </div>

    </div>
{% endblock %}
