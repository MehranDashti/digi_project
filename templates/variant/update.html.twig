{% extends 'base.html.twig' %}

{% block title %}Add Product{% endblock %}

{% block body %}
    <div class="wrapper">
        <div>
            {{ form_start(form) }}
            {% block form_errors %}
                {% spaceless %}
                    {% if errors|length > 0 %}
                        <ul>
                            {% for error in errors %}
                                <li>{{ error.message }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endspaceless %}
            {% endblock form_errors %}

            <div class="form_fields">
                <div class="label">
                    {{ form_label(form.color) }}
                </div>
                <div class="field">
                    {{ form_widget(form.color) }}
                </div>
                <div class="label">
                    {{ form_label(form.price) }}
                </div>
                <div class="field">
                    {{ form_widget(form.price) }}
                </div>
                <div class="label">
                    {{ form_label(form.product) }}
                </div>
                <div class="field">
                    {{ form_widget(form.product) }}
                </div>
                <div class="save_butt">
                    {{ form_widget(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}